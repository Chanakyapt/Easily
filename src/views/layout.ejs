<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>easily - <%= locals.titleDesc %></title>
    <link rel="icon" type="image/x-icon" href="/images/easilyLogo.png" />

    <!-- Bootstrap css -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- Bootstrap script -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>

    <!-- Local css -->
    <link rel="stylesheet" type="text/css" href="/appFiles/mainStyle.css" /> 

    <!-- Local script -->
    <script src="/appFiles/mainScript.js"></script>

    <!-- FontAwsome Script -->
    <script
      src="https://kit.fontawesome.com/62a598aa14.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="applicationBackground">
    <!-- Navigation -->
    <nav
      class="navbar sticky-top navbar-expand-lg | applicationComponentBackground"
    >
      <div class="container-fluid">
        <a class="navbar-brand | applicationTextColor" href="/">
          <img
            src="/images/easilyLogo.png"
            alt="Logo"
            width="45"
            height="40"
            class="d-inline-block"
          />
          easily
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link | applicationTextColor" href="/jobs"
                >Search jobs</a
              >
            </li>
            <% if (locals.userData === "Recruiter") { %>
            <li class="nav-item">
              <a class="nav-link | applicationTextColor" href="/jobs/createJob"
                >Create new job</a
              >
            </li>
            <% } %>
          </ul>
          <% if (locals.page === "jobs") { %>
          <div class="d-flex">
            <input
              class="form-control me-2 | applicationBackground applicationTextColor"
              type="search"
              id="searchJobByNameInput"
              placeholder="Search"
              aria-label="Search By Company Name"
            />
            <button
              class="btn | applicationComponentBackground applicationTextColor applicationBorder"
              type="submit"
              onclick="searchJobByName()"
            >
              Search
            </button>
          </div>
          <% } %> <% if (locals.userData === "Recruiter") { %>
          <div class="d-flex mx-2">
            <form action="/logout" method="post" class="d-flex" role="search">
              <button class="btn btn-primary" type="submit">Logout</button>
            </form>
          </div>
          <% } else if (locals.userData != "Recruiter" && locals.page !=
          "signUp") { %>
          <a class="btn btn-primary mx-2" href="/" role="button">Sign in</a>
          <% } %>
          <div class="d-flex mx-2 | themeTogller">
            <span class="switchStatus">
              <i
                class="me-2 | fa-solid fa-circle-half-stroke | applicationTextColor"
              ></i>
            </span>
            
            <% if (locals.appTheme === "dark") { %>
              <label class="switch">
                <input
                id="themeToggleInput"
                type="checkbox"
                onchange="changeTheme()"
                checked
              />
              <span class="slider round"></span>
            </label>
                <script>
                  changeTheme()
                </script>
                
              <% } else { %>
                <label class="switch">
                  <input
                  id="themeToggleInput"
                  type="checkbox"
                  onchange="changeTheme()"
                />
                <span class="slider round"></span>
              </label>
                <% } %>
          </div>
        </div>
      </div>
    </nav>

    <%- body %>

    <% if (locals.errorMsg) { 
      const fetchedMessage = locals.errorMsg[0].msg; %>
      <script>
        window.alert('<%= fetchedMessage %>');
        history.pushState(null, "", location.href.split("/?")[0]);
      </script>
      <% } %>

    <!-- Bootstrap script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

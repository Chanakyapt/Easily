<div
  class="container-fluid h-100 p-3 | applicationBackground applicationTextColor"
>
  <div
    class="container p-3 | form-container applicationComponentBackground applicationTextColor"
  >
    <!-- Signin/Signup Toggle -->
    <% if (locals.authAction === "SignIn") { %>
    <input type="radio" id="signin-tab" name="tab" checked />
    <% } else { %>
    <input type="radio" id="signin-tab" name="tab" />
    <% } %>

    <% if (locals.authAction === "SignUp") { %>
    <input type="radio" id="signup-tab" name="tab" checked />
    <% } else { %>
    <input type="radio" id="signup-tab" name="tab" />
    <% } %>

    <!-- Signin Form -->
    <div class="form signin-form">
      <h2>Sign In</h2>
      <form class="mt-3" id="signin-form" action="/login" method="POST">
        <input
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor"
          type="email"
          name="email"
          placeholder="Email Address"
          required
        />
        <input
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor applicationBorder"
          type="submit"
        >
          Sign In
        </button>
      </form>
      <p class="mt-1 | form-text applicationTextColor">
        Don't have an account?
        <label
          class="px-3 py-2 m-1 | form-label applicationBackground applicationTextColor applicationBorder"
          for="signup-tab"
          >Sign Up Here</label
        >
      </p>
    </div>

    <!-- Signup Form -->
    <div class="form signup-form">
      <h2>Sign Up</h2>
      <form class="mt-3" id="signup-form" action="/register" method="POST">
        <input
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor"
          type="text"
          name="fullname"
          placeholder="Full Name"
          required
        />
        <input
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor"
          type="email"
          name="email"
          placeholder="Email Address"
          required
        />
        <input
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <input
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor"
          type="password"
          name="confirmPassword"
          placeholder="Confirm Password"
          required
        />
        <button
          class="w-100 p-3 mb-3 | applicationBackground applicationTextColor applicationBorder"
          type="submit"
        >
          Sign Up
        </button>
      </form>
      <p class="mt-1 | form-text applicationTextColor">
        Already have an account?
        <label
          class="px-3 py-2 m-1 | form-label applicationBackground applicationTextColor applicationBorder"
          for="signin-tab"
          >Sign In Here</label
        >
      </p>
    </div>

    <% if (locals.errorMsg) { %>
    <div class="alert alert-warning" role="alert">
      <% for (let err of locals.errorMsg) { %>
      <p><%= err.msg %></p>
      <% } %>
    </div>
    <% } %>

    <% if (locals.successMsg) { %>
        <div class="alert alert-success" role="alert">
          <% for (let note of locals.successMsg) { %>
          <p><%= note.msg %></p>
          <% } %>
        </div>
        <% } %>
  </div>
</div>
